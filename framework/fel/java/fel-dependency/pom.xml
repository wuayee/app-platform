<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>modelengine.fit.jade</groupId>
    <artifactId>fel-dependency</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>

        <!-- Framework version -->
        <fit.version>3.5.0-SNAPSHOT</fit.version>
        <fel.version>1.0.0-SNAPSHOT</fel.version>
        <waterflow.version>1.0.0-SNAPSHOT</waterflow.version>
        <tool.version>1.0.0-SNAPSHOT</tool.version>

        <!-- Third-party versions -->
        <lombok.version>1.18.26</lombok.version>


        <!-- Test framework versions -->
        <assertj.version>3.22.0</assertj.version>
        <junit.version>5.10.3</junit.version>
        <mockito.version>4.11.0</mockito.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- FIT -->
            <dependency>
                <groupId>modelengine.fitframework</groupId>
                <artifactId>fit-api</artifactId>
                <version>${fit.version}</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fitframework</groupId>
                <artifactId>fit-reactor</artifactId>
                <version>${fit.version}</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fitframework</groupId>
                <artifactId>fit-util</artifactId>
                <version>${fit.version}</version>
            </dependency>

            <!-- WaterFlow -->
            <dependency>
                <groupId>modelengine.fit.jade.waterflow</groupId>
                <artifactId>waterflow-core</artifactId>
                <version>${waterflow.version}</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fit.jade.waterflow</groupId>
                <artifactId>waterflow-bridge-fit-reactor</artifactId>
                <version>${waterflow.version}</version>
            </dependency>

            <!-- FEL -->
            <dependency>
                <groupId>modelengine.fit.jade.fel</groupId>
                <artifactId>fel-core</artifactId>
                <version>${fel.version}</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fit.jade.service</groupId>
                <artifactId>fel-langchain-service</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fit.jade.service</groupId>
                <artifactId>fel-pipeline-service</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fit.jade.service</groupId>
                <artifactId>fel-service</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>modelengine.fit.jade.service</groupId>
                <artifactId>rag-service</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>

            <!-- Tool -->
            <dependency>
                <groupId>com.huawei.fit.jade.service</groupId>
                <artifactId>tool-service</artifactId>
                <version>${tool.version}</version>
            </dependency>

            <!-- Third-party -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
                <scope>provided</scope>
            </dependency>

            <!-- Test Plugin -->
            <dependency>
                <groupId>modelengine.fit.plugin</groupId>
                <artifactId>fit-message-serializer-json-jackson</artifactId>
                <version>${fit.version}</version>
                <scope>test</scope>
            </dependency>

            <!-- Test -->
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>${mockito.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.assertj</groupId>
                <artifactId>assertj-core</artifactId>
                <version>${assertj.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
