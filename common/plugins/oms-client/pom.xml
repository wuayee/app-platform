<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>modelengine.fit.jade.plugin</groupId>
        <artifactId>base-plugin-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>oms-client</artifactId>

    <properties>
        <nacos.version>2.4.1</nacos.version>
        <okhttp.version>4.12.0</okhttp.version>
        <slf4j.version>1.7.22</slf4j.version>
        <oms.version>1.0.0-SNAPSHOT</oms.version>
        <crypt.client.service.version>1.0.0-SNAPSHOT</crypt.client.service.version>
        <crypt.grpc.client.version>COMMON_RC4.0-SNAPSHOT</crypt.grpc.client.version>
    </properties>

    <dependencies>
        <!-- FIT core -->
        <dependency>
            <groupId>modelengine.fitframework</groupId>
            <artifactId>fit-api</artifactId>
        </dependency>
        <dependency>
            <groupId>modelengine.fit.service</groupId>
            <artifactId>fit-http-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>modelengine.fit.service</groupId>
            <artifactId>fit-server</artifactId>
        </dependency>

        <!-- Services -->
        <dependency>
            <groupId>modelengine.fit.jade.service</groupId>
            <artifactId>oms-service</artifactId>
            <version>${oms.version}</version>
        </dependency>
        <dependency>
            <groupId>modelengine.fit.jade.service</groupId>
            <artifactId>crypt-client-service</artifactId>
            <version>${crypt.client.service.version}</version>
        </dependency>

        <!-- Third Party -->
        <dependency>
            <groupId>com.alibaba.nacos</groupId>
            <artifactId>nacos-client</artifactId>
            <version>${nacos.version}</version>
        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>okhttp</artifactId>
            <version>${okhttp.version}</version>
        </dependency>
        <dependency>
            <groupId>com.huawei.fce</groupId>
            <artifactId>crypt-grpc-client</artifactId>
            <version>${crypt.grpc.client.version}</version>
        </dependency>

        <!-- Nacos 需要该依赖，移除将报错 -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- TEST -->
        <dependency>
            <groupId>modelengine.fitframework</groupId>
            <artifactId>fit-test-framework</artifactId>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>modelengine.fitframework</groupId>
                <artifactId>fit-build-maven-plugin</artifactId>
                <version>${fit.version}</version>
                <configuration>
                    <sharedDependencies>
                        <sharedDependency>
                            <groupId>org.slf4j</groupId>
                            <artifactId>slf4j-api</artifactId>
                        </sharedDependency>
                    </sharedDependencies>
                </configuration>
                <executions>
                    <execution>
                        <id>build-plugin</id>
                        <goals>
                            <goal>build-plugin</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>package-plugin</id>
                        <goals>
                            <goal>package-plugin</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>modelengine.fitframework</groupId>
                <artifactId>fit-dependency-maven-plugin</artifactId>
                <version>${fit.version}</version>
                <executions>
                    <execution>
                        <id>dependency</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>dependency</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.jar.version}</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Created-By>FIT lab (Huawei)</Created-By>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${maven.antrun.version}</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <copy file="${project.build.directory}/${project.build.finalName}.jar"
                                      todir="../../../framework/fit/java/target/plugins"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>