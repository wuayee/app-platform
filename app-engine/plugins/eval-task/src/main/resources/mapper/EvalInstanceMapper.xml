<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huawei.jade.app.engine.task.mapper.EvalInstanceMapper">
    <resultMap id="EvalInstanceEntityResultMap" type="com.huawei.jade.app.engine.task.entity.EvalInstanceEntity">
        <result property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="finishedAt" column="finished_at"/>
        <result property="createdBy" column="created_by"/>
        <result property="passRate" column="pass_rate"/>
    </resultMap>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_app_engine_eval_instance (task_id)
        VALUES (#{taskId})
    </insert>

    <select id="listEvalInstance" resultType="com.huawei.jade.app.engine.task.entity.EvalInstanceEntity" resultMap="EvalInstanceEntityResultMap">
        SELECT id,
               status,
               pass_rate,
               created_by,
               created_at,
               finished_at
        FROM t_app_engine_eval_instance
        WHERE task_id = #{taskId}
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countEvalInstance" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM t_app_engine_eval_instance
        WHERE task_id = #{taskId}
    </select>
</mapper>