<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huawei.jade.app.engine.eval.mapper.EvalDatasetMapper">
    <resultMap id="EvalDatasetEntityResultMap" type="com.huawei.jade.app.engine.eval.entity.EvalDatasetEntity">
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="createdBy" column="created_by"/>
    </resultMap>

    <select id="getSchema" resultType="String">
        select schema
        from t_app_engine_eval_dataset
        where id = #{datasetId}
    </select>

    <!-- 分页查询数据集元数据 -->
    <select id="listEvalDataset" resultType="com.huawei.jade.app.engine.eval.entity.EvalDatasetEntity"
            resultMap="EvalDatasetEntityResultMap">
        SELECT id,
               name,
               description,
               created_at,
               updated_at,
               created_by,
               updated_by
        FROM t_app_engine_eval_dataset
        WHERE app_id = #{appId}
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 按照数据集唯一标识查询指定数据集元数据 -->
    <select id="getEvalDatasetById" resultType="com.huawei.jade.app.engine.eval.entity.EvalDatasetEntity"
            resultMap="EvalDatasetEntityResultMap">
        SELECT name,
               description,
               schema,
               created_at,
               updated_at,
               created_by,
               updated_by
        FROM t_app_engine_eval_dataset
        WHERE id = #{datasetId}
    </select>

    <!-- 查询数据集个数 -->
    <select id="countEvalDataset" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM t_app_engine_eval_dataset
        WHERE app_id = #{appId}
    </select>

    <delete id="deleteById">
        delete
        from t_app_engine_eval_dataset
        where id = #{datasetId}
    </delete>

    <delete id="delete">
        delete
        from t_app_engine_eval_dataset
        where id in
        <foreach collection="list" separator="," item="item" open="(" close=")">
            (#{item})
        </foreach>
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_app_engine_eval_dataset (name, description, schema, app_id)
        VALUES (#{name}, #{description}, #{schema}, #{appId})
    </insert>

    <!-- 更新数据集相关信息 -->
    <update id="updateEvaldataset">
        UPDATE t_app_engine_eval_dataset
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description}</if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>